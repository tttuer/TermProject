<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:fl_fillColor="#E91E63"
        app:fl_originalWidth="512"
        app:fl_originalHeight="512"
        app:fl_strokeColor="#000000"
        app:fl_strokeDrawingDuration="1000"
        app:fl_fillDuration="2000"
        app:fl_clippingTransform="waves"
        android:layout_gravity="center"
        />

</FrameLayout>